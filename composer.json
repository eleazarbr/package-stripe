{
    "name": "eleazarbr/package-stripe",
    "version": "0.1.0",
    "description": "A Stripe and Buefy implementation for my projects.",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/eleazarbr/package-stripe",
    "keywords": [
        "php laravel stripe"
    ],
    "autoload": {
        "psr-4": {
            "Eleazarbr\\PackageStripe\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Eleazar Resendez",
            "email": "eleazar@eresendez.com",
            "homepage": "https://eresendez.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/cashier": "^13.6"
    },
    "require-dev": {
        "ergebnis/php-cs-fixer-config": "^3.2",
        "orchestra/testbench": "^6.0",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.10",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "php-cs-fixer": [
            "mkdir -p .build/php-cs-fixer",
            "php-cs-fixer fix --verbose"
        ],
        "phpmd": [
            "phpmd ./config,./src,./tests json phpmd-rulesets.xml --reportfile .build/phpmd/.phpmd-results.json"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eleazarbr\\PackageStripe\\PackageStripeServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
