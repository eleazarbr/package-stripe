root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{*.php,composer.json}]
indent_style = space
indent_size = 4

[{*.html,*.blade.php,*.vue,*.less,*.sass,*.css,*.js,*.json}]
indent_style = space
indent_size = 2
